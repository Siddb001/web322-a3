<%- include("layout", {
    user: user,
    body: `
    <div class="center-card">
        <h1>Welcome, <%= user.name %>!</h1>
        <p>Your personal task dashboard.</p>

        <div class="summary-box">
            <h2>Task Summary</h2>
            <p>Total Tasks: <strong><%= stats.total %></strong></p>
            <p>Completed: <strong><%= stats.completed %></strong></p>
            <p>Pending: <strong><%= stats.pending %></strong></p>
        </div>

        <div style="margin-top: 20px;">
            <a href="/tasks" class="btn btn-blue">View Tasks</a>
            <a href="/tasks/add" class="btn btn-purple">Add Task</a>
        </div>
    </div>
    `
}) %>
